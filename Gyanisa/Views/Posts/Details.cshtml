@model Gyanisa.Models.Blog.Post
@{
    ViewBag.Title = Model.MetaTitle;
    ViewBag.Keywords = Model.MetaKeywords;
    ViewBag.Description = Model.MetaDescription;
    ViewBag.Abstract = Model.Metaabstract;
    ViewBag.Canonical = "posts/"+ Model.Id +"/" + Model.Slug;

    var image_path = "";
}


@if (!string.IsNullOrEmpty(Model.Image))
{
    image_path = $"/BlogImage/{Model.Image}";
}
else
{
    image_path = $"/BlogImage/{Model.Image}";
}

<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url('@image_path')" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-10" data-aos="fade-up" data-aos-delay="400">
                <div class="row justify-content-center mt-5">
                    <div class="col-md-8 text-center">
                        <h1 class="font-weight-bold"> @Model.Title</h1>
                        <p class="mb-0">by Tuitioner<span class="mx-1">&bullet;</span> @Model.Created.ToShortDateString() <span class="mx-1">&bullet;</span> <a href="#">@Model.postGroup.PostGroupName</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">


                @*<div class="mb-4">
                    <div>
                        <img src="@image_path" alt="Image" class="img-fluid">
                    </div>
                </div>
                <div class="meta mb-3">by Tuitioner<span class="mx-1">&bullet;</span> @Model.Created.ToShortDateString() <span class="mx-1">&bullet;</span> <a href="#">News</a></div>*@

                <p>  @Html.Raw(Model.Body)</p>
            </div>
            <div class="col-md-4 ml-auto">
                <div class="mb-6">
                    <h3 class="h5 text-black mb-3">Search</h3>
                    <form action="#" method="post">
                        <div class="form-group d-flex">
                            <input type="text" class="form-control" placeholder="Search keyword and hit enter...">
                        </div>
                    </form>
                </div>

                <div class="mb-5">
                    <h3 class="h5 text-black mb-3">Recent Post</h3>

                    @foreach (var item in ViewBag.Popular)
                    {
                        <div class="row">
                            <div class="col-md-4">

                                @if (!string.IsNullOrEmpty(@item.Image))
                                {
                                    image_path = $"/BlogImage/{@item.Image}";
                                    <img src="@image_path" alt="@item.Title" width="100px">
                                }
                                else
                                {
                                    <img src="~/BlogImage/empty_blog.jpg" alt="@item.Title" width="100px">
                                }
                            </div>
                            <div class="col-md-8">
                                <div class="font-weight-bold glyphicon-text-size"><a href="@(Url.Action("Details", "Posts", new { id = item.Id,Title=item.Slug }))" class="text-black">@item.Title</a></div>
                            </div>
                        </div>
                        <hr />
                    }

                </div>

                @*<div class="mb-5">
            <h3 class="h5 text-black mb-3">Popular Posts</h3>
