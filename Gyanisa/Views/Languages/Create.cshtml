@model Gyanisa.Models.Admin.Language
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/Dashboard/_Layout1.cshtml";
}

<div class="panel-wrapper">

    <div class="row">
        <div class="col-md-6">
            <div class="breadcrumb-wrapper">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="dashboard.html">Dashboard</a></li>
                    <li class="breadcrumb-item active">Language</li>
                </ol>
            </div>
        </div>
        <div class="col-md-6"></div>
    </div>

    <div class="panel-header">

        <div class="row">
            <div class="col-md-6">
                <h3>Language</h3>
            </div>
            <div class="col-md-6"></div>
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <!-- tab start -->
            <div class="tab_container">
                <input class="tab-inp" id="tab1" type="radio" name="tabs">
                <label class="tab-label" for="tab1"><span><a asp-action="Index"> Language List</a></span></label>
                <input class="tab-inp" id="tab2" type="radio" name="tabs" checked>
                <label class="tab-label" for="tab2"><span><a asp-action="Create"> Add Course </a></span></label>

                <!-- tab content -->

                <section id="content2" class="tab-content">

                    <div class="row">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="col-md-8">

                                <div class="col-md-6">
                                    <div class="form-tools-cover">
                                        <div class="input-group">
                                            <input asp-for="LanguageCode" class="" aria-describedby="basic-addon1" required />
                                            <label>Language ID</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-tools-cover">
                                        <div class="input-group">
                                            <input asp-for="LanguageName" class="" aria-describedby="basic-addon1" required />
                                            <label>Language Name</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-tools-cover">
                                        <div class="input-group">
                                            <input asp-for="Slug" class="" aria-describedby="basic-addon1" />
                                            <label>Slug </label>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-tools-cover">
                                        <div class="input-group">
                                            <input asp-for="MetaTitle" class="" aria-describedby="basic-addon1" />
                                            <label>Meta Title</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-tools-cover">
                                        <div class="input-group">
                                            <input asp-for="MetaKeywords" class="" aria-describedby="basic-addon1" />
                                            <label>Meta Keywords</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-tools-cover">
                                        <div class="input-group">
                                            <textarea asp-for="MetaDescription"></textarea>
                                            <label>Meta Description</label>
                                        </div>
                                    </div>
                                </div>


                                <div class="col-md-6">
                                    <div class="form-tools-cover">
                                        <div class="input-group">
                                            <textarea asp-for="Metaabstract"></textarea>
                                            <label>Meta Abstract</label>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-12">
                                <div class="button-cover">
                                    <input type="submit" class="btn btn-save" value="Submit Process">
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
            <!-- tab close -->
        </div>
        <!-- content close -->
    </div>
</div>